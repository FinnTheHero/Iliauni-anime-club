---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/gamja-flower'
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<link rel="icon" type="image/svg+xml" href="/images/image-5.png" />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://kit.fontawesome.com/6c329d5de3.js" crossorigin="anonymous"></script>
		
		<title>{title}</title>
	</head>
	<body>
		<Navbar title={title} />
		<slot />
		<Footer />
	</body> 
</html>

<style is:global>
	body {
		width: 100%;
		height: 100vh;
		background: #FFF;
		font-family: 'Gamja Flower', sans-serif;
		font-size: x-large;
		/* color: white; */
		position: absolute;
	}

	main {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	ul {
		list-style: none;
	}

	h1 {
		color: red;
	}
</style>

<script>
	// Setting random background image on load
	var images = ['copy1.jpg', 'copy2.jpg', 'copy3.jpg'];
	var main = document.getElementById("main");
	let random = Math.floor(Math.random() * images.length);
	window.onload = function() {
		if(main){
			main.style.backgroundImage = "url(/images/" + images[random] + ")"
		}
	}
</script>
