---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/gamja-flower'
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/image-5.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://kit.fontawesome.com/6c329d5de3.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<Navbar title={title} />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	body {
		width: 100%;
		height: 100vh;
		background: #FFF;
		font-family: 'Gamja Flower', sans-serif;
		font-size: x-large;
		/* color: white; */
		position: absolute;
	}
	ul {
		list-style: none;
	}
</style>
