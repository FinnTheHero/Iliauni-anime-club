---
// Bootstrap
import "bootstrap/dist/css/bootstrap.min.css";

// Components
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Font - gamja flower
import '@fontsource/gamja-flower'

const description = "Website for Iliauni Anime Club and other anime enthusiasts.";
const url = "https://iliauni-anime-club.vercel.app/"
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:image" content="/images/main1.png" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content="/images/main1.png" />
		<meta name="generator" content={Astro.generator} />
		
		<link rel="icon" type="image/svg+xml" href="/images/image-2.png" />
		<link rel="canonical" href={url} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		
		<!-- Bootstrap -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		<!-- Icons -->
		<script src="https://kit.fontawesome.com/6c329d5de3.js" crossorigin="anonymous"></script>
		
		<!-- Page Title -->
		<title>{title}</title>
	</head>
	<body>
		<Navbar title={title} />
		<slot />
		<Footer />
	</body> 
</html>

<style is:global>
	body {
		width: 100%;
		height: 100vh;
		background: #FFF;
		font-family: 'Gamja Flower', sans-serif;
		font-size: x-large;
		/* color: white; */
		position: absolute;
	}

	#main {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
	@media (min-width: 1024px) {
		#main {
			/* background-size: 100%; */
			background-size: auto;
			/* background-repeat: no-repeat; */
		}
	}

	#history {
		width: 100%;
		height: auto;
		padding: 5%;
	}

	#vote {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: auto;
		padding: 5%;
	}

	ul {
		list-style: none;
	}

	h1 {
		color: red;
	}
</style>

<script>
	// Setting random background image on load
	var images = ['copy1.svg', 'copy2.svg', 'copy3.svg'];
	var main = document.getElementsByTagName("main")[0];
	let random = Math.floor(Math.random() * images.length);
	window.onload = function() {
		if(main){
			main.style.backgroundImage = "url(/images/" + images[random] + ")"
		}
	}
</script>
