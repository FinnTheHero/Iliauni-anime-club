---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iliauni anime club">
	<main id="main">
		<div class="carousel-holder">
			<div id="carouselExampleCaptions" class="carousel slide">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="/images/main1.png" class="object-fit-fill border border-danger border-3 rounded d-block w-100" alt="...">
						<div class="carousel-caption d-none d-md-block">
							<!-- <h5>First slide label</h5>
							<p>Some representative placeholder content for the first slide.</p> -->
						</div>
					</div>
					<div class="carousel-item">
						<img src="/images/test2.jpg" class="object-fit-fill border border-danger border-3 rounded d-block w-100" alt="...">
						<div class="carousel-caption d-none d-md-block">
							<h5>Second slide label</h5>
							<p>Some representative placeholder content for the second slide.</p>
						</div>
					</div>
					<div class="carousel-item">
						<img src="/images/test3.jpg" class="object-fit-fill border border-danger border-3 rounded d-block w-100" alt="...">
						<div class="carousel-caption d-none d-md-block">
							<h5>Third slide label</h5>
							<p>Some representative placeholder content for the third slide.</p>
						</div>
					</div>
					<div class="carousel-item">
						<img src="/images/test4.jpg" class="object-fit-fill border border-danger border-3 rounded d-block w-100" alt="...">
						<div class="carousel-caption d-none d-md-block">
							<h5>Fourth slide label</h5>
							<p>Some representative placeholder content for the fourth slide.</p>
						</div>
					</div>
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
					<!-- <img aria-hidden="true" src="/arrow_icons/ArrowCircleLeft.svg" alt="Previous"> -->
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
					<!-- <img aria-hidden="true" src="/arrow_icons/ArrowCircleRight.svg" alt="Next"> -->
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
				<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style is:global>
	.carousel-holder {
		max-width: 65%;
		max-height: 55%;
		width: auto;
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0px 0px 200px 20px rgba(255, 0, 0, 1);
	}

	.carousel {
		position: relative;
	}

	.carousel-control-prev {
		position: absolute;
		left: -20%;
	}

	.carousel-control-prev-icon {
		height: 40px;
		width: 35px;
		background-color: black;
		border-radius: 30%;
	}

	.carousel-control-next {
		position: absolute;
		right: -20%;
	}

	.carousel-control-next-icon {
		height: 40px;
		width: 35px;
		background-color: black;
		border-radius: 30%;
	}

</style>